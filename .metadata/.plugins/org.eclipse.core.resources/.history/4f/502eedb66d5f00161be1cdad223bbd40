package java_20160811;

import java.util.ArrayList;

public class Main3 {
	
	//static Product[] products = new Product[3];
	static ArrayList products = new ArrayList();
	
	public static void main(String[] args){
	
		System.out.println("ArrayList의 사이즈 : " + Main.products.size());
		
		Main3.products[0] = new Product("1", 1, "1");
		Main3.products[1] = new Product("2", 2, "2");
		Main3.products[2] = new Product("3", 3, "3");
		
		Main3.products[0].setNumber(1);
		Main3.products[1].setNumber(2);
		Main3.products[2].setNumber(3);
		
		System.out.println("번호\t이름\t가격\t정보");
		for(int i=0; i<Main3.products.length; i++){
			System.out.print(Main3.products[i].getNumber() + "\t");
			System.out.print(Main3.products[i].getName() + "\t");
			System.out.print(Main3.products[i].getPrice() + "\t");
			System.out.println(Main3.products[i].getInfo());
		}
		
		Main3.products[0].setNumber(-1);
		
		System.out.println("번호\t이름\t가격\t정보");
		for(int i=0; i<Main3.products.length; i++){
			if(Main3.products[i].getNumber() != -1){
				System.out.print(Main3.products[i].getNumber() + "\t");
				System.out.print(Main3.products[i].getName() + "\t");
				System.out.print(Main3.products[i].getPrice() + "\t");
				System.out.println(Main3.products[i].getInfo());
			}
		}
		
	}
	
}
